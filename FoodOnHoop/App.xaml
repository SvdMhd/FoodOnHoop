<Application x:Class="FoodOnHoop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FoodOnHoop"
             StartupUri="MainWindow.xaml"
             xmlns:views="clr-namespace:FoodOnHoop.Views"
             xmlns:viewModels="clr-namespace:FoodOnHoop.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:AboutUsViewModel}">
            <views:AboutUs/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AllTimeChillersViewModel}">
            <views:AllTimeChillers/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ContactUsViewModel}">
            <views:ContactUs/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:FoodOnMoodViewModel}">
            <views:FoodOnMood/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:Home/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:HotClassicViewModel}">
            <views:HotClassic/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:Login/>
        </DataTemplate>
    </Application.Resources>
</Application>
